<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_gradient">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/comfortaa_bold"
            android:layout_marginTop="100dp"
            android:textColor="@color/text_grey"
            android:textSize="30sp"
            android:text="Знову привіт!"/>

        <TextView
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:fontFamily="@font/comfortaa"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_grey"
            android:textSize="25sp"
            android:text="Ласкаво просимо назад, за тобою скучили!"/>

        <EditText
            android:id="@+id/login_username"
            android:layout_width="match_parent"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_height="60sp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/input"
            android:padding="16dp"
            android:textColorHint="#B0B0B0"
            android:textColor="@color/text_grey"
            android:fontFamily="@font/comfortaa"
            android:textSize="16sp"
            android:elevation="20dp"
            android:hint="Введіть логін"/>

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/input"
            android:padding="16dp"
            android:textColorHint="#B0B0B0"
            android:textColor="@color/text_grey"
            android:fontFamily="@font/comfortaa"
            android:textSize="16sp"
            android:elevation="20dp"
            android:hint="Введіть пароль"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="textEnd"
            android:fontFamily="@font/comfortaa"
            android:layout_marginTop="15dp"
            android:textColor="@color/text_grey"
            android:textSize="14sp"
            android:text="Забули пароль"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/comfortaa_bold"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            android:text="Увійти"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="25dp"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp">
            <View
                android:layout_marginTop="2dp"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/text_grey" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="Продовжити з"
                android:textColor="@color/text_grey"
                android:fontFamily="@font/comfortaa"
                android:textSize="14sp" />
            <View
                android:layout_marginTop="2dp"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/text_grey" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:id="@+id/login_google"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/rounded_border"
                android:padding="0dp"
                android:layout_margin="0dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/google"
                    android:contentDescription="Google Icon" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/login_apple"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_margin="50dp"
                android:orientation="vertical"
                android:background="@drawable/rounded_border"
                android:padding="0dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/apple"
                    android:contentDescription="Apple Icon" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/login_facebook"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/rounded_border"
                android:padding="0dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/facebook"
                    android:contentDescription="Facebook Icon" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginRight="65dp"
            android:layout_marginLeft="65dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Перший раз?"
                android:textColor="@color/text_grey"
                android:fontFamily="@font/comfortaa"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/login_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Зареєструватися"
                android:textColor="@color/pink"
                android:fontFamily="@font/comfortaa_bold"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
